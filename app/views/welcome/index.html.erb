<%= form_with url: search_state_path, local: true do |form| %>
  <%= form.label :search_state, 'Search For House Members Of A Specific State' %>
  <%= form.select :state, us_states %>
  <%= form.submit 'Search By State' %>
<% end %>
<% if @facade.members %>
  <h1><%=@facade.members.size%> Results </h1>
  <% @facade.members.each do |member| %>
    <ul class="house_members">
      <li class="name">Name: <%= member.name %></li>
      <li class="role">Role: <%= member.role %></li>
      <li class="party">Party: <%= member.party %></li>
      <li class="district">District: <%= member.district %></li>
    </ul>
  <% end %>

